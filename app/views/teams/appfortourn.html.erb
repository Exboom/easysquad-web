<%= form_with scope: :game, url: creat_appfortourn_path, html: {:id=>"demo-form2", "data-parsley-validate"=>"", :class=>"form-horizontal form-label-left", :novalidate=>""}, local: true do |form| %>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <h3>Заявка на турнир: "<%= @tourn.name %>" <br>
      Команда: <%= @team.name %>
      </h3>
    </div>
  </div>
  <%= form.hidden_field :team_id, value: @team.id%>
  <%= form.hidden_field :tourn_id, value: @tourn.id%>
  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Ваша команда:
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <% if @players.empty? %>
        <h3> Нет доступных к заявке игроков</h3>
      <% else %>
        <%= form.collection_check_boxes(:player_id, @players, :id, :name, {}, { :class=>"form-control checkbox inline"}) %>
      <% end %>
    </div>
  </div>
  <% if !@players.empty? %>
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= form.submit "Создать", :class=>"btn btn-success" %>
    </div>
  <% end %>
<% end %>