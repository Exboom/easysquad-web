<%= form_with(model: @team, html: {:id => "demo-form2", "data-parsley-validate" => "", :class => "form-horizontal form-label-left", :novalidate => ""}, local: true) do |form| %>
  <div class="item form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h2>Редактирование профиля команды: <%= @team.name %></h2>
    </div>
  </div>
  <div class="item form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Название
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.text_field :name, :id => "name", :class => "form-control col-md-5 col-xs-12", :required => "" %>
    </div>
  </div>
  <div class="item form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="enemyteam">Капитан
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.collection_select(:player_id, @team.players, :id, :name, {:prompt => "Выберите капитана"}, {:id => "enemyteam", :class => "form-control"}) %>
    </div>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= form.submit "Обновить", :class => "btn btn-success" %>
    <a onclick="javascript:history.back(); return false;" class="btn btn-success"> Отмена
    </a>
  </div>
<% end %>
