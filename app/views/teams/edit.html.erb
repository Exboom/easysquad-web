<h1>EasySquad</h1>
<h2>Редактирование профиля команды: <%= @team.name %></h2>

<%= form_with(model: @team, local: true) do |form| %>

  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@team.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :Название %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :Владелец %><br>
    <%= form.collection_select(:owner, User.all, :id, :email) %>
  </p>

  <p>
    <%= form.label :Капитан %><br>
    <%= form.collection_select(:captain, Player.all, :id, :name) %>
  </p>

  <p>
    <%= form.submit("Обновить") %>
  </p>

<% end %>

<%= button_to "Назад", :back, :method => :get %>