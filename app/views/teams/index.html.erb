<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2><i class="fa fa-shield"></i> Команды</h2>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <ul id="team_content" class="border">
        <% if @teams.empty? %>
          <blockquote>
            <p>Команды отсутствуют</p>
          </blockquote>
        <% else %>
          <% @teams.each do |team| %>
            <li><%= link_to team.name, team_path(team), method: :get %>
              <div style="display: inline-block; position: absolute; right: 25px;">
                <%= admin_pan_team(team) %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
      <%= pagination(@teams_page, @teams) %>
    </div>
  </div>
</div>
<script>
    function checkPagePlus() {
        var counter = $('#page').val();
        if ((Number(counter) + 1) < <%= @teams_page %>) {
            $('#counter').html(+$('#counter').html() + 1);
            $('#page').val(+$('#page').val() + 1);
            $.ajax({
                url: "/teams",
                type: "GET",
                data: {offset: (Number(counter) + 1)}
            })
        }
    }

    function checkPageMinus() {
        var counter = $('#page').val();
        if ((Number(counter) + 1) != 1) {
            $('#counter').html(+$('#counter').html() - 1);
            $('#page').val(+$('#page').val() - 1);
            $.ajax({
                url: "/teams",
                type: "GET",
                data: {offset: (Number(counter) - 1)}
            })
        }
    }
</script>