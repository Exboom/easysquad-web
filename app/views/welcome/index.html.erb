<h1>EasySquad</h1>
<h2>Собери свою команду!</h2>
<% if user_signed_in? %>
  <span>Здравствуйте, <%= current_user.email %></span>
  <%= button_to 'Выйти', destroy_user_session_path, :method => :delete %>
  <%= button_to 'Профиль', player_path(current_user.id), :method => :get %>

  <h3> Ближайшие игры </h3>

  <% if @f==nil %>
    <p><%=@games%></p>
  <% else%>
   <% @games.each do |game|%>
    <p><%= game.name%> <%= link_to 'показать', game_path(game) %></p>
    <% end %>
  <% end %>


  <h3> Команды </h3>

  <% if @f1==nil %>
    <p><%=@teams%> <%= link_to 'Создать команду?', new_team_path %></p>
  <% else%>
    <% @teams.each do |team|%>
      <p><%= team.name%> <%= link_to 'показать', team_path(team) %></p>
    <% end %>
    <%= button_to 'Добавить команду?', new_team_path, :method => :get %></p>
  <% end %>

  <h3> Федерации </h3>

  <% if @f2==nil %>
    <p><%=@federations%> <%= link_to 'Создать федерацию?', new_federation_path %></p>
  <% else%>
    <% @federations.each do |federation|%>
      <p><%= federation.name%> <%= link_to 'показать', federation_path(federation) %></p>
    <% end %>
    <%= button_to 'Добавить федерацию?', new_federation_path, :method => :get %></p>
  <% end %>

  <h3>Места проведения турниров:</h3>

  <% if @f3==nil %>
    <p><%=@tourn%> <%= link_to ' Добавить место?', new_location_path %></p>
  <% else%>
    <% @tourn.each do |tourn|%>
      <p><%= tourn.name%> <%= link_to 'показать', location_path(tourn) %></p>
    <% end %>
    <%= button_to 'Добавить место?', new_location_path, :method => :get %></p>
  <% end %>


<% else %>
  <%= button_to 'Войти', new_user_session_path, :method => :get %> <p>или <p><%= button_to 'Зарегистрироваться', new_user_registration_path, :method => :get %>
<% end %>