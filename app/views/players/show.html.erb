                        <h2><li>У вас нет заявок</li></h2>
                        <% else%>
                          <% @applications.each do |app|%>
                            <h2><li>№<%= app%> <%= link_to 'показать', application_path(app) %></li></h2>
                          <% end %>
                        <% end %>

