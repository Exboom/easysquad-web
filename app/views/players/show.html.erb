                        <h2><li> Игровой номер: <%= @player.gamenumber %></li></h2>
                      </div>
                      <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">

                        <% if @teams.empty? %>
                          <h2>Вы не играете ни за одну команду</h2>
                        <% else%>
                          <% @teams.each do |team|%>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                              <div class="x_panel">
                                <div class="x_title">
                                  <h2><%=team.name %> <small></small></h2>
                                  <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
