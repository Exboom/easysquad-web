<%= form_with(model: @player, html: {:id=>"demo-form2", "data-parsley-validate"=>"", :class=>"form-horizontal form-label-left", :novalidate=>""}, local: true) do |form| %>

  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@player.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @player.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h2>Редактирование профиля</h2>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Имя
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.text_field :name, :id=>"name", :class=>"form-control col-md-5 col-xs-12" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Дата рождения
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.date_field :birthday, :min => "1950-01-01", :end_year => Date.today.year, :class=>"form-control col-md-5 col-xs-12" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Игровой номер
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.number_field :gamenumber, :min=>1, :class=>"form-control col-md-5 col-xs-12" %>
    </div>
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= form.submit "Обновить", :class=>"btn btn-success" %>
  </div>

<% end %>

