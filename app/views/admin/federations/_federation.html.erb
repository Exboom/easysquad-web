<div class="item form-group">
  <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Название
  </label>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <%= form.text_field :name, :id => "name", :class => "form-control col-md-5 col-xs-12", :required => "" %>
  </div>
</div>

<div class="item form-group">
  <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Описание
  </label>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <%= form.text_area :description, :id => "description", :class => "form-control col-md-5 col-xs-12", :required => "" %>
  </div>
</div>

<div class="item form-group">
  <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Электронный адрес
  </label>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <%= form.url_field :url, :id => "url", :class => "form-control col-md-5 col-xs-12", :required => "", :placeholder=>"www.website.com" %>
  </div>
</div>

<div class="item form-group">
  <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Контакты
  </label>
  <div class="col-md-6 col-sm-6 col-xs-12">
    <%= form.telephone_field :contacts, :id => "telephone", :class => "form-control col-md-5 col-xs-12", :required => "" %>
  </div>
</div>