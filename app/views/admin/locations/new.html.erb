<%= form_with scope: :location, url: admin_locations_path, html: {:id=>"demo-form2", "data-parsley-validate"=>"", :class=>"form-horizontal form-label-left", :novalidate=>""}, local: true do |form| %>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h2> Заполните информацию о новом месте</h2>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Название
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.text_field :name, :id=>"name", :class=>"form-control col-md-5 col-xs-12" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="myteam">Адрес
    </label>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <%= form.text_field :address, :id=>"name", :class=>"form-control col-md-5 col-xs-12" %>
    </div>
  </div>

  <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
    <%= form.submit "Создать", :class=>"btn btn-success" %>
  </div>

<% end %>