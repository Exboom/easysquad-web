<div class="">
  <div id="login" class="animate form">
    <section class="login_content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h1>Вход в систему</h1>

        <div>
          <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder =>"Email",  :required => ""  %>
        </div>

        <div>
          <%= f.password_field :password, autofocus: true, :class => "form-control", :placeholder =>"Пароль",  :required => ""  %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="checkbox-inline">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Запомнить меня" %>
          </div>
        <% end -%>


        <div>
          <%= f.submit "Вход", :class => "button7"%>
          <a class="reset_pass" href="password/new">Забыли пароль?</a>
        </div>

        <div class="clearfix"></div>
        <div class="separator">

          <p class="change_link">Хотите создать команду?
            <a href="sign_up" class="to_register"> Зарегистрируйтесь </a>
          </p>
          <div class="clearfix"></div>
        <br />
        <div>
          <h1><i class="fa fa-paw" style="font-size: 26px;"></i> EasySquad</h1>
          <p>©2019 Никаких прав нет. EasySquad. Собери свою команду!</p>
        </div>
        <% end %>
        <!-- form -->
      </section>
      <!-- content -->
    </div>

  </div>
</div>

